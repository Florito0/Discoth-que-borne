    <script>
        // Gestion des clics sur les éléments du menu
        const menuItems = document.querySelectorAll('.menu-item');
        const submenuItems = document.querySelectorAll('.submenu-item');
        const backButtons = document.querySelectorAll('.back-button');
        const contentSections = document.querySelectorAll('.content-section');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleIcon = document.getElementById('toggleIcon');

        menuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const target = item.getAttribute('data-target');

                // Masquer toutes les sections et afficher celle ciblée
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');

                // Gérer l'état actif des éléments du menu
                menuItems.forEach(i => i.classList.remove('active'));
                item.classList.add('active');
            });
        });

        submenuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const target = item.getAttribute('data-target');

                // Afficher la section correspondante
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
            });
        });

        backButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                const target = button.getAttribute('data-target');

                // Afficher la section correspondante
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
            });
        });

        // Afficher la section "Gestion" par défaut
        document.getElementById('gestion').classList.add('active');

        // Gestion de la rétraction/expansion du menu
        function toggleSidebar() {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.classList.remove('chevron-left');
                toggleIcon.classList.add('chevron-right');
            } else {
                toggleIcon.classList.remove('chevron-right');
                toggleIcon.classList.add('chevron-left');
            }
        }

        // Gestion de la modale de bienvenue
        const modal = document.getElementById('welcomeModal');
        const dontShowAgainCheckbox = document.getElementById('dontShowAgain');

        // Vérifier si la modale doit être affichée
        try {
            if (!localStorage.getItem('dontShowWelcomeModal')) {
                modal.style.display = 'flex';
            }
        } catch (e) {
            console.error('Erreur avec localStorage :', e);
            modal.style.display = 'flex'; // Afficher la modale par défaut si localStorage échoue
        }

        function closeModal() {
            try {
                if (dontShowAgainCheckbox.checked) {
                    localStorage.setItem('dontShowWelcomeModal', 'true');
                }
            } catch (e) {
                console.error('Erreur lors de l\'écriture dans localStorage :', e);
            }
            modal.style.display = 'none';
            // Remettre le focus sur un élément approprié après la fermeture
            document.querySelector('.menu-item.active').focus();
        }

        // Ajouter un focus sur la modale lorsqu'elle s'ouvre
        modal.addEventListener('transitionend', () => {
            if (modal.style.display === 'flex') {
                modal.focus();
            }
        });
    </script>
</body>
