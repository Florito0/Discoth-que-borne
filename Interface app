    <script>
        // Gestion des clics sur les éléments du menu
        const menuItems = document.querySelectorAll('.menu-item');
        const submenuItems = document.querySelectorAll('.submenu-item');
        const backButtons = document.querySelectorAll('.back-button');
        const contentSections = document.querySelectorAll('.content-section');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleIcon = document.getElementById('toggleIcon');

        menuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const target = item.getAttribute('data-target');

                // Masquer toutes les sections et afficher celle ciblée
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');

                // Gérer l'état actif des éléments du menu
                menuItems.forEach(i => i.classList.remove('active'));
                item.classList.add('active');
            });
        });

        submenuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const target = item.getAttribute('data-target');

                // Afficher la section correspondante
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
            });
        });

        backButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                const target = button.getAttribute('data-target');

                // Afficher la section correspondante
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
            });
        });

        // Afficher la section "Gestion" par défaut
        document.getElementById('gestion').classList.add('active');

        // Gestion de la rétraction/expansion du menu
        function toggleSidebar() {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.classList.remove('chevron-left');
                toggleIcon.classList.add('chevron-right');
            } else {
                toggleIcon.classList.remove('chevron-right');
                toggleIcon.classList.add('chevron-left');
            }
        }

        // Gestion de la modale de bienvenue
        const modal = document.getElementById('welcomeModal');
        const dontShowAgainCheckbox = document.getElementById('dontShowAgain');

        // Vérifier si la modale doit être affichée
        try {
            if (!localStorage.getItem('dontShowWelcomeModal')) {
                modal.style.display = 'flex';
            }
        } catch (e) {
            console.error('Erreur avec localStorage :', e);
            modal.style.display = 'flex'; // Afficher la modale par défaut si localStorage échoue
        }

        function closeModal() {
            try {
                if (dontShowAgainCheckbox.checked) {
                    localStorage.setItem('dontShowWelcomeModal', 'true');
                }
            } catch (e) {
                console.error('Erreur lors de l\'écriture dans localStorage :', e);
            }
            modal.style.display = 'none';
            // Remettre le focus sur un élément approprié après la fermeture
            document.querySelector('.menu-item.active').focus();
        }

        // Ajouter un focus sur la modale lorsqu'elle s'ouvre
        modal.addEventListener('transitionend', () => {
            if (modal.style.display === 'flex') {
                modal.focus();
            }
        });

        // Gestion de la modale de confirmation
        const confirmationModal = document.getElementById('confirmationModal');

        function showConfirmationModal() {
            confirmationModal.style.display = 'flex';
        }

        function closeConfirmationModal() {
            confirmationModal.style.display = 'none';
        }

        // Gestion de l'upload de la couverture
        const coverUpload = document.getElementById('coverUpload');
        const coverImage = document.getElementById('coverImage');
        const coverPlaceholder = document.getElementById('coverPlaceholder');
        const removeCoverBtn = document.getElementById('removeCoverBtn');
        const coverSection = document.getElementById('coverSection');

        coverUpload.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    coverImage.src = event.target.result;
                    coverImage.style.display = 'block';
                    coverPlaceholder.style.display = 'none';
                    removeCoverBtn.style.display = 'inline-block';
                    coverSection.classList.remove('invalid');
                };
                reader.readAsDataURL(file);
            }
        });

        removeCoverBtn.addEventListener('click', () => {
            coverImage.src = '';
            coverImage.style.display = 'none';
            coverPlaceholder.style.display = 'flex';
            removeCoverBtn.style.display = 'none';
            coverUpload.value = ''; // Réinitialiser l'input file
        });

        // Gestion de la validation et soumission du formulaire
        const profileForm = document.getElementById('profileForm');
        const discoNameInput = document.getElementById('discoName');
        const countryInput = document.getElementById('country');
        const cityInput = document.getElementById('city');
        const postalCodeInput = document.getElementById('postalCode');
        const addressInput = document.getElementById('address');
        const countryCodeInput = document.getElementById('countryCode');
        const phoneInput = document.getElementById('phone');
        const emailInput = document.getElementById('email');

        function validateForm() {
            let isValid = true;

            // Validation de la couverture
            if (!coverImage.src || coverImage.style.display === 'none') {
                coverSection.classList.add('invalid');
                isValid = false;
            } else {
                coverSection.classList.remove('invalid');
            }

            // Validation du nom de la discothèque
            if (!discoNameInput.value.trim()) {
                discoNameInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                discoNameInput.parentElement.classList.remove('invalid');
            }

            // Validation de la ville
            if (!cityInput.value.trim()) {
                cityInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                cityInput.parentElement.classList.remove('invalid');
            }

            // Validation du code postal
            const postalCodePattern = countryInput.value === 'FR' ? /^\d{5}$/ : /.*/; // 5 chiffres pour la France
            if (!postalCodePattern.test(postalCodeInput.value.trim())) {
                postalCodeInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                postalCodeInput.parentElement.classList.remove('invalid');
            }

            // Validation de l'adresse
            if (!addressInput.value.trim()) {
                addressInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                addressInput.parentElement.classList.remove('invalid');
            }

            // Validation du téléphone
            const phonePattern = countryInput.value === 'FR' ? /^[67]\d{8}$/ : /^\d{9,15}$/; // Commence par 6 ou 7 et 9 chiffres pour la France
            if (!phonePattern.test(phoneInput.value.trim())) {
                phoneInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                phoneInput.parentElement.classList.remove('invalid');
            }

            // Validation de l'e-mail
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(emailInput.value.trim())) {
                emailInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                emailInput.parentElement.classList.remove('invalid');
            }

            return isValid;
        }

        profileForm.addEventListener('submit', (e) => {
            e.preventDefault();

            if (validateForm()) {
                const formData = new FormData(profileForm);
                const data = {
                    discoName: formData.get('discoName'),
                    country: formData.get('country'),
                    city: formData.get('city'),
                    postalCode: formData.get('postalCode'),
                    address: formData.get('address'),
                    phone: `${formData.get('countryCode')}${formData.get('phone')}`,
                    email: formData.get('email'),
                    cover: coverImage.src,
                };
                // Simulation de sauvegarde (vous pouvez remplacer par une requête API)
                console.log('Informations sauvegardées :', data);
                showConfirmationModal();
            }
        });

        // Réinitialisation du formulaire
        function resetForm() {
            profileForm.reset();
            coverImage.src = '';
            coverImage.style.display = 'none';
            coverPlaceholder.style.display = 'flex';
            removeCoverBtn.style.display = 'none';
            coverUpload.value = '';
            coverSection.classList.remove('invalid');
            document.querySelectorAll('.form-group').forEach(group => {
                group.classList.remove('invalid');
            });
            countryInput.value = 'FR'; // Remettre la France par défaut
            countryCodeInput.value = '+33'; // Remettre +33 par défaut
        }

        // Validation en temps réel
        discoNameInput.addEventListener('input', () => {
            if (discoNameInput.value.trim()) {
                discoNameInput.parentElement.classList.remove('invalid');
            }
        });

        cityInput.addEventListener('input', () => {
            if (cityInput.value.trim()) {
                cityInput.parentElement.classList.remove('invalid');
            }
        });

        postalCodeInput.addEventListener('input', () => {
            const postalCodePattern = countryInput.value === 'FR' ? /^\d{5}$/ : /.*/;
            if (postalCodePattern.test(postalCodeInput.value.trim())) {
                postalCodeInput.parentElement.classList.remove('invalid');
            }
        });

        addressInput.addEventListener('input', () => {
            if (addressInput.value.trim()) {
                addressInput.parentElement.classList.remove('invalid');
            }
        });

        phoneInput.addEventListener('input', () => {
            const phonePattern = countryInput.value === 'FR' ? /^[67]\d{8}$/ : /^\d{9,15}$/;
            if (phonePattern.test(phoneInput.value.trim())) {
                phoneInput.parentElement.classList.remove('invalid');
            }
        });

        emailInput.addEventListener('input', () => {
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (emailPattern.test(emailInput.value.trim())) {
                emailInput.parentElement.classList.remove('invalid');
            }
        });

        // Mettre à jour la validation du code postal et du téléphone en fonction du pays
        countryInput.addEventListener('change', () => {
            const postalCodePattern = countryInput.value === 'FR' ? /^\d{5}$/ : /.*/;
            if (!postalCodePattern.test(postalCodeInput.value.trim())) {
                postalCodeInput.parentElement.classList.add('invalid');
            } else {
                postalCodeInput.parentElement.classList.remove('invalid');
            }

            const phonePattern = countryInput.value === 'FR' ? /^[67]\d{8}$/ : /^\d{9,15}$/;
            if (!phonePattern.test(phoneInput.value.trim())) {
                phoneInput.parentElement.classList.add('invalid');
            } else {
                phoneInput.parentElement.classList.remove('invalid');
            }

            // Synchroniser le code de pays avec le pays sélectionné
            const countryToCodeMap = {
                'FR': '+33',
                'US': '+1',
                'GB': '+44',
                'DE': '+49',
                'ES': '+34',
                'IT': '+39',
            };
            countryCodeInput.value = countryToCodeMap[countryInput.value] || '+33';
        });
    </script>
</body>
</html>
