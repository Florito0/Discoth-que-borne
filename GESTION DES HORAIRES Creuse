    <script>
        let horaires = {};
        let copiedHoraires = null;

        // Charger les horaires depuis localStorage ou initialiser
        function loadHoraires() {
            const saved = localStorage.getItem('horaires');
            horaires = saved ? JSON.parse(saved) : {
                lundi: {debut: '', fin: ''},
                mardi: {debut: '', fin: ''},
                mercredi: {debut: '', fin: ''},
                jeudi: {debut: '', fin: ''},
                vendredi: {debut: '', fin: ''},
                samedi: {debut: '', fin: ''},
                dimanche: {debut: '', fin: ''}
            };
            initializeForm();
        }

        // Remplir les champs avec les données chargées
        function initializeForm() {
            document.querySelectorAll('tbody tr').forEach(row => {
                const day = row.dataset.day;
                row.querySelector('.heure-debut').value = horaires[day].debut;
                row.querySelector('.heure-fin').value = horaires[day].fin;
            });
        }

        // Copier les horaires d’un jour
        function copyHoraires(day) {
            const row = document.querySelector(`tr[data-day="${day}"]`);
            const debut = row.querySelector('.heure-debut').value;
            const fin = row.querySelector('.heure-fin').value;
            
            copiedHoraires = { debut: debut, fin: fin };
            console.log(`Copié depuis ${day}:`, copiedHoraires);
            alert(`Horaires de ${day} copiés !`);
        }

        // Coller les horaires sur un jour
        function pasteHoraires(day) {
            if (!copiedHoraires) {
                alert('Aucun horaire copié. Veuillez copier un horaire d’abord.');
                return;
            }

            const row = document.querySelector(`tr[data-day="${day}"]`);
            row.querySelector('.heure-debut').value = copiedHoraires.debut;
            row.querySelector('.heure-fin').value = copiedHoraires.fin;
            console.log(`Collé sur ${day}:`, copiedHoraires);
            alert(`Horaires collés à ${day} !`);
        }

        // Sauvegarder les horaires
        function saveHoraires() {
            document.querySelectorAll('tbody tr').forEach(row => {
                const day = row.dataset.day;
                const debut = row.querySelector('.heure-debut').value;
                const fin = row.querySelector('.heure-fin').value;

                if (debut && fin && new Date(`2000-01-01 ${debut}`) >= new Date(`2000-01-01 ${fin}`)) {
                    alert(`Erreur : L'heure de fin doit être après l'heure de début pour ${day}`);
                    return;
                }

                horaires[day] = { debut, fin };
            });

            localStorage.setItem('horaires', JSON.stringify(horaires));
            console.log('Horaires sauvegardés:', horaires);
            alert('Horaires sauvegardés avec succès!');
        }

        // Ajouter les événements aux boutons
        document.querySelectorAll('.copy-btn').forEach(button => {
            button.addEventListener('click', function() {
                const day = this.getAttribute('data-day');
                copyHoraires(day);
            });
        });

        document.querySelectorAll('.paste-btn').forEach(button => {
            button.addEventListener('click', function() {
                const day = this.getAttribute('data-day');
                pasteHoraires(day);
            });
        });

        document.getElementById('save-btn').addEventListener('click', saveHoraires);

        // Initialisation
        loadHoraires();
    </script>
</body>
