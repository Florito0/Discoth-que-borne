    <script>
        let tarifs = loadTarifs();

        function loadTarifs() {
            const saved = localStorage.getItem('tarifs');
            return saved ? JSON.parse(saved) : {
                lundi: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'},
                mardi: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'},
                mercredi: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'},
                jeudi: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'},
                vendredi: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'},
                samedi: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'},
                dimanche: {normal: 0, creux: 0, debut: '', fin: '', public: 'tous'}
            };
        }

        function initializeForm() {
            document.querySelectorAll('tbody tr').forEach(row => {
                const day = row.dataset.day;
                const data = tarifs[day];
                row.querySelector('.tarif-normal').value = data.normal;
                row.querySelector('.heure-debut').value = data.debut;
                row.querySelector('.heure-fin').value = data.fin;
                row.querySelector('.tarif-creux').value = data.creux;
                row.querySelector('.public-select').value = data.public;
            });
        }

        function validateRow(row) {
            let isValid = true;
            const day = row.dataset.day;
            const normal = row.querySelector('.tarif-normal').value;
            const creux = row.querySelector('.tarif-creux').value;
            const debut = row.querySelector('.heure-debut').value;
            const fin = row.querySelector('.heure-fin').value;

            // Validation Tarif Normal
            const normalError = row.cells[1].querySelector('.error');
            if (normal === '' || isNaN(normal)) {
                normalError.textContent = 'Tarif invalide';
                normalError.style.display = 'block';
                isValid = false;
            } else {
                normalError.style.display = 'none';
            }

            // Validation Heures Creuses (optionnel)
            const heuresError = row.cells[2].querySelector('.error');
            if (debut && fin && new Date(`2000-01-01 ${debut}`) >= new Date(`2000-01-01 ${fin}`)) {
                heuresError.textContent = 'Heure de fin doit être après le début';
                heuresError.style.display = 'block';
                isValid = false;
            } else {
                heuresError.style.display = 'none';
            }

            // Validation Tarif Creux
            const creuxError = row.cells[3].querySelector('.error');
            if (creux === '' || isNaN(creux)) {
                creuxError.textContent = 'Tarif invalide';
                creuxError.style.display = 'block';
                isValid = false;
            } else if (parseFloat(creux) > parseFloat(normal)) {
                creuxError.textContent = 'Doit être ≤ tarif normal';
                creuxError.style.display = 'block';
                isValid = false;
            } else {
                creuxError.style.display = 'none';
            }

            return isValid;
        }

        function saveTarifs() {
            let allValid = true;
            document.querySelectorAll('tbody tr').forEach(row => {
                if (!validateRow(row)) allValid = false;
            });

            if (!allValid) {
                alert('Corrigez les erreurs avant de sauvegarder');
                return;
            }

            document.querySelectorAll('tbody tr').forEach(row => {
                const day = row.dataset.day;
                const normal = row.querySelector('.tarif-normal').value;
                const creux = row.querySelector('.tarif-creux').value;
                const debut = row.querySelector('.heure-debut').value;
                const fin = row.querySelector('.heure-fin').value;
                const public = row.querySelector('.public-select').value;

                tarifs[day] = {
                    normal: parseFloat(normal),
                    creux: parseFloat(creux),
                    debut: debut,
                    fin: fin,
                    public: public
                };
            });

            localStorage.setItem('tarifs', JSON.stringify(tarifs));
            console.log('Tarifs sauvegardés:', tarifs);
            alert('Tarifs sauvegardés avec succès!');
        }

        function getTarif(jour, heure, sexe) {
            const tarif = tarifs[jour.toLowerCase()];
            if (!tarif.debut || !tarif.fin) return tarif.normal;
            
            const currentTime = new Date(`2000-01-01 ${heure}`);
            const debutTime = new Date(`2000-01-01 ${tarif.debut}`);
            const finTime = new Date(`2000-01-01 ${tarif.fin}`);

            if (currentTime >= debutTime && currentTime <= finTime) {
                if (tarif.public === 'tous' || tarif.public === sexe) {
                    return tarif.creux;
                }
            }
            return tarif.normal;
        }

        // Événements de validation en temps réel
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', () => validateRow(input.closest('tr')));
        });

        // Initialisation
        initializeForm();
    </script>
</body>
</html>
