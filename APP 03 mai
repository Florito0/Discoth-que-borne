    <script>
        // Gestion des clics sur les éléments du menu
        const menuItems = document.querySelectorAll('.menu-item');
        const submenuItems = document.querySelectorAll('.submenu-item');
        const backButtons = document.querySelectorAll('.back-button');
        const contentSections = document.querySelectorAll('.content-section');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleIcon = document.getElementById('toggleIcon');

        menuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const target = item.getAttribute('data-target');
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
                menuItems.forEach(i => i.classList.remove('active'));
                item.classList.add('active');
            });
        });

        submenuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const target = item.getAttribute('data-target');
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
            });
        });

        backButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                const target = button.getAttribute('data-target');
                contentSections.forEach(section => section.classList.remove('active'));
                document.getElementById(target).classList.add('active');
            });
        });

        document.getElementById('gestion').classList.add('active');

        function toggleSidebar() {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.classList.remove('chevron-left');
                toggleIcon.classList.add('chevron-right');
            } else {
                toggleIcon.classList.remove('chevron-right');
                toggleIcon.classList.add('chevron-left');
            }
        }

        const modal = document.getElementById('welcomeModal');
        const dontShowAgainCheckbox = document.getElementById('dontShowAgain');

        try {
            if (!localStorage.getItem('dontShowWelcomeModal')) {
                modal.style.display = 'flex';
            }
        } catch (e) {
            console.error('Erreur avec localStorage :', e);
        }

        function closeModal() {
            try {
                if (dontShowAgainCheckbox.checked) {
                    localStorage.setItem('dontShowWelcomeModal', 'true');
                }
            } catch (e) {
                console.error('Erreur lors de l\'écriture dans localStorage :', e);
            }
            modal.style.display = 'none';
            document.querySelector('.menu-item.active').focus();
        }

        modal.addEventListener('transitionend', () => {
            if (modal.style.display === 'flex') {
                modal.focus();
            }
        });

        const confirmationModal = document.getElementById('confirmationModal');

        function showConfirmationModal() {
            confirmationModal.style.display = 'flex';
        }

        function closeConfirmationModal() {
            confirmationModal.style.display = 'none';
        }

        const coverUpload = document.getElementById('coverUpload');
        const coverImage = document.getElementById('coverImage');
        const coverPlaceholder = document.getElementById('coverPlaceholder');
        const removeCoverBtn = document.getElementById('removeCoverBtn');
        const coverSection = document.getElementById('coverSection');

        coverUpload.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    coverImage.src = event.target.result;
                    coverImage.style.display = 'block';
                    coverPlaceholder.style.display = 'none';
                    removeCoverBtn.style.display = 'inline-block';
                    coverSection.classList.remove('invalid');
                };
                reader.readAsDataURL(file);
            }
        });

        removeCoverBtn.addEventListener('click', () => {
            coverImage.src = '';
            coverImage.style.display = 'none';
            coverPlaceholder.style.display = 'flex';
            removeCoverBtn.style.display = 'none';
            coverUpload.value = '';
        });

        const profileForm = document.getElementById('profileForm');
        const discoNameInput = document.getElementById('discoName');
        const countryInput = document.getElementById('country');
        const cityInput = document.getElementById('city');
        const postalCodeInput = document.getElementById('postalCode');
        const addressInput = document.getElementById('address');
        const countryCodeInput = document.getElementById('countryCode');
        const phoneInput = document.getElementById('phone');
        const emailInput = document.getElementById('email');

        // Synchronisation du nom de la discothèque uniquement pour Paramètres des tickets
        function updateDiscoName() {
            const discoName = discoNameInput.value.trim() || 'Non défini';
            document.getElementById('ticketDiscoName').value = discoName;
        }

        // Charger le nom de la discothèque depuis localStorage au démarrage
        try {
            const savedDiscoName = localStorage.getItem('discoName');
            if (savedDiscoName) {
                discoNameInput.value = savedDiscoName;
                updateDiscoName();
            }
        } catch (e) {
            console.error('Erreur avec localStorage :', e);
        }

        // Mettre à jour le nom de la discothèque à chaque modification
        discoNameInput.addEventListener('input', () => {
            updateDiscoName();
            if (discoNameInput.value.trim()) {
                discoNameInput.parentElement.classList.remove('invalid');
            }
        });

        function validateForm() {
            let isValid = true;

            if (!coverImage.src || coverImage.style.display === 'none') {
                coverSection.classList.add('invalid');
                isValid = false;
            } else {
                coverSection.classList.remove('invalid');
            }

            if (!discoNameInput.value.trim()) {
                discoNameInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                discoNameInput.parentElement.classList.remove('invalid');
            }

            if (!cityInput.value.trim()) {
                cityInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                cityInput.parentElement.classList.remove('invalid');
            }

            const postalCodePattern = countryInput.value === 'FR' ? /^\d{5}$/ : /.*/;
            if (!postalCodePattern.test(postalCodeInput.value.trim())) {
                postalCodeInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                postalCodeInput.parentElement.classList.remove('invalid');
            }

            if (!addressInput.value.trim()) {
                addressInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                addressInput.parentElement.classList.remove('invalid');
            }

            const phonePattern = countryInput.value === 'FR' ? /^[67]\d{8}$/ : /^\d{9,15}$/;
            if (!phonePattern.test(phoneInput.value.trim())) {
                phoneInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                phoneInput.parentElement.classList.remove('invalid');
            }

            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(emailInput.value.trim())) {
                emailInput.parentElement.classList.add('invalid');
                isValid = false;
            } else {
                emailInput.parentElement.classList.remove('invalid');
            }

            return isValid;
        }

        profileForm.addEventListener('submit', (e) => {
            e.preventDefault();

            if (validateForm()) {
                const formData = new FormData(profileForm);
                const data = {
                    discoName: formData.get('discoName'),
                    country: formData.get('country'),
                    city: formData.get('city'),
                    postalCode: formData.get('postalCode'),
                    address: formData.get('address'),
                    phone: `${formData.get('countryCode')}${formData.get('phone')}`,
                    email: formData.get('email'),
                    cover: coverImage.src,
                };
                try {
                    localStorage.setItem('discoName', data.discoName);
                } catch (e) {
                    console.error('Erreur lors de l\'écriture dans localStorage :', e);
                }
                updateDiscoName();
                console.log('Informations sauvegardées :', data);
                showConfirmationModal();
            }
        });

        function resetForm() {
            profileForm.reset();
            coverImage.src = '';
            coverImage.style.display = 'none';
            coverPlaceholder.style.display = 'flex';
            removeCoverBtn.style.display = 'none';
            coverUpload.value = '';
            coverSection.classList.remove('invalid');
            document.querySelectorAll('.form-group').forEach(group => {
                group.classList.remove('invalid');
            });
            countryInput.value = 'FR';
            countryCodeInput.value = '+33';
            updateDiscoName();
        }

        cityInput.addEventListener('input', () => {
            if (cityInput.value.trim()) {
                cityInput.parentElement.classList.remove('invalid');
            }
        });

        postalCodeInput.addEventListener('input', () => {
            const postalCodePattern = countryInput.value === 'FR' ? /^\d{5}$/ : /.*/;
            if (postalCodePattern.test(postalCodeInput.value.trim())) {
                postalCodeInput.parentElement.classList.remove('invalid');
            }
        });

        addressInput.addEventListener('input', () => {
            if (addressInput.value.trim()) {
                addressInput.parentElement.classList.remove('invalid');
            }
        });

        phoneInput.addEventListener('input', () => {
            const phonePattern = countryInput.value === 'FR' ? /^[67]\d{8}$/ : /^\d{9,15}$/;
            if (phonePattern.test(phoneInput.value.trim())) {
                phoneInput.parentElement.classList.remove('invalid');
            }
        });

        emailInput.addEventListener('input', () => {
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (emailPattern.test(emailInput.value.trim())) {
                emailInput.parentElement.classList.remove('invalid');
            }
        });

        countryInput.addEventListener('change', () => {
            const postalCodePattern = countryInput.value === 'FR' ? /^\d{5}$/ : /.*/;
            if (!postalCodePattern.test(postalCodeInput.value.trim())) {
                postalCodeInput.parentElement.classList.add('invalid');
            } else {
                postalCodeInput.parentElement.classList.remove('invalid');
            }

            const phonePattern = countryInput.value === 'FR' ? /^[67]\d{8}$/ : /^\d{9,15}$/;
            if (!phonePattern.test(phoneInput.value.trim())) {
                phoneInput.parentElement.classList.add('invalid');
            } else {
                phoneInput.parentElement.classList.remove('invalid');
            }

            const countryToCodeMap = {
                'FR': '+33',
                'BE': '+32',
                'CH': '+41',
                'ES': '+34',
                'MC': '+377',
                'CA': '+1',
                'US': '+1',
                'GB': '+44',
                'DE': '+49',
                'IT': '+39',
            };
            countryCodeInput.value = countryToCodeMap[countryInput.value] || '+33';
        });

        const taxRatesContainer = document.querySelector('.tax-rates');
        const addTaxBtn = document.querySelector('.add-tax-btn');
        const ticketItems = document.querySelectorAll('.ticket-item select');
        const vestiaireItem = document.querySelector('.vestiaire-item select');
        const saveTaxSettingsBtn = document.getElementById('saveTaxSettingsBtn');

        let taxRates = ['5.5', '10', '20'];

        function updateTaxSelects() {
            const selects = document.querySelectorAll('.ticket-item select, .vestiaire-item select');
            selects.forEach(select => {
                const currentValue = select.value;
                select.innerHTML = '';
                taxRates.forEach(rate => {
                    const option = document.createElement('option');
                    option.value = rate;
                    option.textContent = `${rate}%`;
                    if (rate === currentValue) {
                        option.selected = true;
                    }
                    select.appendChild(option);
                });
            });
        }

        addTaxBtn.addEventListener('click', () => {
            const newRate = prompt('Entrez un nouveau taux de TVA (ex: 15 pour 15%) :');
            if (newRate && !isNaN(newRate) && newRate > 0 && !taxRates.includes(newRate)) {
                taxRates.push(newRate);
                taxRates.sort((a, b) => parseFloat(a) - parseFloat(b));
                taxRatesContainer.innerHTML = '';
                taxRates.forEach(rate => {
                    const rateItem = document.createElement('div');
                    rateItem.classList.add('tax-rate-item');
                    rateItem.style.display = 'flex';
                    rateItem.style.alignItems = 'center';
                    rateItem.style.justifyContent = 'space-between';
                    rateItem.style.background = '#2c2c2c';
                    rateItem.style.padding = '10px';
                    rateItem.style.borderRadius = '8px';
                    rateItem.innerHTML = `
                        <span>${rate}%</span>
                        <button class="delete-btn" style="background: none; border: none; color: #ff5555; cursor: pointer;">
                            <span class="icon trash" style="width: 16px; height: 16px; position: relative; display: inline-block;">
                                <span style="position: absolute; top: 2px; left: 2px; width: 12px; height: 2px; background: #ff5555;"></span>
                                <span style="position: absolute; top: 6px; left: 0; width: 16px; height: 8px; border: 2px solid #ff5555; border-top: none; border-radius: 0 0 4px 4px;"></span>
                            </span>
                        </button>
                    `;
                    taxRatesContainer.appendChild(rateItem);
                });
                updateTaxSelects();
                document.querySelectorAll('.delete-btn').forEach(btn => {
                    btn.addEventListener('click', handleDeleteTaxRate);
                });
            } else if (newRate) {
                alert('Veuillez entrer un taux valide et non existant.');
            }
        });

        function handleDeleteTaxRate(e) {
            const rateItem = e.target.closest('.tax-rate-item');
            const rate = rateItem.querySelector('span').textContent.replace('%', '');
            let isUsed = false;
            ticketItems.forEach(select => {
                if (select.value === rate) {
                    isUsed = true;
                }
            });
            if (vestiaireItem.value === rate) {
                isUsed = true;
            }

            if (isUsed) {
                alert('Ce taux est actuellement utilisé dans les tickets ou le vestiaire. Veuillez modifier les sélections avant de supprimer ce taux.');
                return;
            }

            taxRates = taxRates.filter(r => r !== rate);
            rateItem.remove();
            updateTaxSelects();
        }

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', handleDeleteTaxRate);
        });

        saveTaxSettingsBtn.addEventListener('click', () => {
            const ticketSettings = {};
            ticketItems.forEach((select, index) => {
                const ticketType = select.closest('.ticket-item').querySelector('span').textContent;
                ticketSettings[ticketType] = select.value;
            });

            const vestiaireSettings = {
                'Vestiaire': vestiaireItem.value
            };

            const taxData = {
                taxRates: taxRates,
                ticketSettings: ticketSettings,
                vestiaireSettings: vestiaireSettings
            };

            console.log('Paramètres de taxes sauvegardés :', taxData);
            showConfirmationModal();
        });
    </script>
</body>
</html>
