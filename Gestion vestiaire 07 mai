<body>
  <!-- √âl√©ment pour afficher les notifications temporaires -->
  <div id="notification" class="notification"></div>

  <!-- Interface utilisateur pour les clients -->
  <div class="container" id="client-interface" style="display: none;">
    <div class="header">
      <h1>VESTIAIRE</h1>
      <div class="subtitle">S√©lectionnez vos articles</div>
    </div>
    
    <!-- Conteneur pour la liste des articles disponibles -->
    <div class="items-container" id="items-container"></div>
    
    <!-- Section pour afficher le total et les boutons d'action -->
    <div class="total-section">
      <div class="total-row">
        <div>TOTAL</div>
        <div id="total-price">0‚Ç¨</div>
      </div>
      <!-- Bouton pour valider la s√©lection -->
      <button id="checkout-btn" class="checkout-btn" disabled onclick="validateSelection()" aria-label="Valider la s√©lection">VALIDER</button>
      <!-- Bouton pour continuer sans s√©lectionner d'articles -->
      <button id="no-vestiaire-btn" class="no-vestiaire-btn" onclick="noVestiaire()" aria-label="Continuer sans vestiaire">SANS VESTIAIRE</button>
    </div>
  </div>

  <!-- Interface pour le g√©rant (administration) -->
  <div class="admin-container" id="admin-interface" style="display: block;">
    <div class="header">
      <h1>GESTION VESTIAIRE</h1>
      <div class="subtitle">Modifier les articles</div>
    </div>
    
    <!-- Conteneur pour la liste des articles dans l'interface admin -->
    <div class="admin-items" id="admin-items"></div>
    
    <!-- Formulaire pour ajouter un nouvel article -->
    <div class="admin-form">
      <input type="text" id="new-item-name" placeholder="Nom de l'article" aria-label="Nom de l'article">
      <input type="number" id="new-item-price" placeholder="Prix (‚Ç¨)" step="0.01" aria-label="Prix de l'article en euros">
      <button class="admin-btn" onclick="addItem()" aria-label="Ajouter un article">Ajouter Article</button>
    </div>
  </div>

  <!-- Bouton pour basculer entre les interfaces client et admin -->
  <button class="toggle-btn" id="toggle-btn" onclick="toggleInterface()" aria-label="Basculer entre les interfaces">Passer au Kiosque</button>

  <script>
    // Tableau pour stocker les articles (nom, prix, quantit√©, ID)
    let items = [];

    // Affiche une notification temporaire avec un message donn√©
    function showNotification(message) {
      const notification = document.getElementById('notification');
      notification.textContent = message;
      notification.classList.add('show');
      setTimeout(() => notification.classList.remove('show'), 3000);
    }

    // Rend la liste des articles dans l'interface client
    function renderItems() {
      const container = document.getElementById('items-container');
      if (!container) {
        console.error("Conteneur client non trouv√©");
        return;
      }
      container.innerHTML = '';
      if (items.length === 0) {
        container.innerHTML = '<div class="empty-message">Aucun article disponible pour le moment.</div>';
      } else {
        items.forEach(item => {
          container.innerHTML += `
            <div class="item">
              <div class="item-name">${item.name}</div>
              <div class="item-price">${item.price.toFixed(2)}‚Ç¨</div>
              <div class="quantity-control">
                <button class="qty-btn" data-id="${item.id}" data-action="decrease" aria-label="Diminuer la quantit√© de ${item.name}">-</button>
                <div id="${item.id}-qty" class="qty-value">${item.qty}</div>
                <button class="qty-btn" data-id="${item.id}" data-action="increase" aria-label="Augmenter la quantit√© de ${item.name}">+</button>
              </div>
            </div>
          `;
        });
      }
      updateTotal();
      attachQuantityListeners();
    }

    // Attache les √©couteurs d'√©v√©nements aux boutons de quantit√©
    function attachQuantityListeners() {
      const container = document.getElementById('items-container');
      if (!container) return;
      container.querySelectorAll('.qty-btn').forEach(btn => {
        btn.removeEventListener('click', handleQuantityClick);
        btn.addEventListener('click', handleQuantityClick);
      });
    }

    // G√®re les clics sur les boutons de quantit√©
    function handleQuantityClick(event) {
      const id = event.target.dataset.id;
      const action = event.target.dataset.action;
      updateQuantity(id, action === 'increase' ? 1 : -1);
    }

    // Met √† jour la quantit√© d'un article sp√©cifique
    function updateQuantity(itemId, change) {
      const item = items.find(i => i.id === itemId);
      if (!item) {
        console.error(`Article non trouv√© : ${itemId}`);
        return;
      }
      const newQty = item.qty + change;
      if (newQty >= 0) {
        item.qty = newQty;
        const qtyElement = document.getElementById(`${itemId}-qty`);
        if (qtyElement) qtyElement.textContent = newQty;
        updateTotal();
      }
    }

    // Calcule et affiche le total de la s√©lection
    function updateTotal() {
      let total = 0;
      let itemCount = 0;
      items.forEach(item => {
        total += item.price * item.qty;
        itemCount += item.qty;
      });
      const totalElement = document.getElementById('total-price');
      const checkoutBtn = document.getElementById('checkout-btn');
      if (totalElement && checkoutBtn) {
        totalElement.textContent = `${total.toFixed(2)}‚Ç¨`;
        checkoutBtn.disabled = itemCount === 0;
      }
    }

    // Valide la s√©lection et r√©initialise les quantit√©s
    function validateSelection() {
      items.forEach(item => item.qty = 0);
      renderItems();
      showNotification('S√©lection valid√©e !');
    }

    // Passe √† l'interface admin
    function switchToAdmin() {
      document.getElementById('client-interface').style.display = 'none';
      document.getElementById('admin-interface').style.display = 'block';
      document.getElementById('toggle-btn').textContent = 'Passer au Kiosque';
      renderAdminItems();
    }

    // Passe √† l'interface client
    function switchToClient() {
      document.getElementById('admin-interface').style.display = 'none';
      document.getElementById('client-interface').style.display = 'block';
      document.getElementById('toggle-btn').textContent = "Passer √† l'acc√®s g√©rant";
      renderItems();
    }

    // R√©initialise les quantit√©s et notifie l'utilisateur
    function noVestiaire() {
      items.forEach(item => item.qty = 0);
      renderItems();
      showNotification('Continuer sans vestiaire.');
    }

    // Rend la liste des articles dans l'interface admin
    function renderAdminItems() {
      const adminContainer = document.getElementById('admin-items');
      if (!adminContainer) {
        console.error("Conteneur admin non trouv√©");
        return;
      }
      adminContainer.innerHTML = '';
      if (items.length === 0) {
        adminContainer.innerHTML = '<div class="empty-message">Aucun article pour le moment. Ajoutez-en un ci-dessous.</div>';
      } else {
        items.forEach(item => {
          const itemDiv = document.createElement('div');
          itemDiv.className = 'admin-item';
          itemDiv.draggable = true;
          itemDiv.dataset.id = item.id;
          itemDiv.innerHTML = `
            <span>${item.name} - ${item.price.toFixed(2)}‚Ç¨</span>
            <button class="delete-btn" data-id="${item.id}" aria-label="Supprimer ${item.name}">üóëÔ∏è</button>
          `;
          adminContainer.appendChild(itemDiv);
        });
      }
      attachDeleteListeners();
      attachDragAndDropListeners();
    }

    // Attache les √©couteurs d'√©v√©nements aux boutons de suppression
    function attachDeleteListeners() {
      const adminContainer = document.getElementById('admin-items');
      if (!adminContainer) return;
      adminContainer.querySelectorAll('.delete-btn').forEach(btn => {
        btn.removeEventListener('click', handleDeleteClick);
        btn.addEventListener('click', handleDeleteClick);
      });
    }

    // G√®re les clics sur les boutons de suppression
    function handleDeleteClick(event) {
      const id = event.target.dataset.id;
      deleteItem(id);
    }

    // Configure le drag-and-drop pour r√©organiser les articles
    function attachDragAndDropListeners() {
      const adminContainer = document.getElementById('admin-items');
      if (!adminContainer) return;
      const adminItems = adminContainer.querySelectorAll('.admin-item');

      adminItems.forEach(item => {
        item.addEventListener('dragstart', (e) => {
          item.classList.add('dragging');
          e.dataTransfer.setData('text/plain', item.dataset.id);
        });

        item.addEventListener('dragend', () => {
          item.classList.remove('dragging');
        });

        item.addEventListener('dragover', (e) => {
          e.preventDefault();
        });

        item.addEventListener('drop', (e) => {
          e.preventDefault();
          const draggedId = e.dataTransfer.getData('text/plain');
          const draggedItem = items.find(i => i.id === draggedId);
          const targetId = item.dataset.id;
          const targetItem = items.find(i => i.id === targetId);

          if (draggedId && targetId && draggedId !== targetId) {
            const draggedIndex = items.indexOf(draggedItem);
            const targetIndex = items.indexOf(targetItem);
            if (draggedIndex !== -1 && targetIndex !== -1) {
              items.splice(draggedIndex, 1); // Supprime l'√©l√©ment d√©plac√©
              items.splice(targetIndex, 0, draggedItem); // Ins√®re √† la nouvelle position
              renderAdminItems();
              renderItems();
            }
          }
        });
      });
    }

    // Ajoute un nouvel article √† partir du formulaire admin
    function addItem() {
      const name = document.getElementById('new-item-name').value.trim();
      const priceInput = document.getElementById('new-item-price').value;
      const price = priceInput ? parseFloat(priceInput) : NaN;

      if (name && !isNaN(price) && price >= 0) {
        const id = name.toLowerCase().replace(/\s+/g, '-') + '-' + Date.now(); // G√©n√©ration d'un ID unique
        if (items.some(i => i.name.toLowerCase() === name.toLowerCase())) {
          showNotification('Cet article existe d√©j√† !');
          return;
        }
        items.push({ id, name, price, qty: 0 });
        document.getElementById('new-item-name').value = '';
        document.getElementById('new-item-price').value = '';
        renderAdminItems();
        renderItems();
        showNotification('Article ajout√© avec succ√®s !');
      } else {
        showNotification('Veuillez entrer un nom valide et un prix positif.');
      }
    }

    // Supprime un article par son ID
    function deleteItem(itemId) {
      const itemIndex = items.findIndex(i => i.id === itemId);
      if (itemIndex === -1) {
        console.error(`Article non trouv√© pour suppression : ${itemId}`);
        return;
      }
      items.splice(itemIndex, 1);
      renderAdminItems();
      renderItems();
      showNotification('Article supprim√©.');
    }

    // Bascule entre les interfaces client et admin
    function toggleInterface() {
      const clientInterface = document.getElementById('client-interface');
      if (clientInterface.style.display === 'none') {
        switchToClient();
      } else {
        switchToAdmin();
      }
    }

    // Initialisation au chargement de la page
    window.onload = () => {
      document.getElementById('admin-interface').style.display = 'block';
      document.getElementById('client-interface').style.display = 'none';
      document.getElementById('toggle-btn').textContent = 'Passer au Kiosque';
      renderAdminItems();
    };
  </script>
</body>
</html>
