    }
    
    /* Effet visuel lorsqu'un article est en train d'√™tre d√©plac√© */
    .admin-item.dragging {
      opacity: 0.5;
      background-color: #333;
    }
    
    /* Formulaire pour ajouter un nouvel article */
    .admin-form {
