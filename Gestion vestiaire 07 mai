      }
      .quantity-control {
        gap: 3px;
      }
    }

    /* Adaptation pour √©crans jusqu'√† 480px */
    @media (max-width: 480px) {
      .item {
        grid-template-columns: 2fr 1fr 2fr;
        padding: 6px 0;
      }
