    }
    
    /* Effet au survol du bouton admin */
    .admin-btn:hover {
      background-color: #DA22FF;
    }
    
    /* Bouton de suppression d'un article */
    .delete-btn {
      width: clamp(28px, 8vw, 32px);
      height: clamp(28px, 8vw, 32px);
