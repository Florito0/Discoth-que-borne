        // Mobile menu toggle
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // FAQ accordion
        const faqQuestions = document.querySelectorAll('.faq-question');
        faqQuestions.forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const icon = question.querySelector('i');
                answer.classList.toggle('hidden');
                icon.classList.toggle('fa-chevron-down');
                icon.classList.toggle('fa-chevron-up');
            });
        });

        // Demo video modal
        const demoVideoBtn = document.getElementById('demo-video-btn');
        const demoVideoModal = document.getElementById('demo-video-modal');
        const closeModal = document.getElementById('close-modal');

        demoVideoBtn.addEventListener('click', () => {
            demoVideoModal.classList.remove('hidden');
        });

        closeModal.addEventListener('click', () => {
            demoVideoModal.classList.add('hidden');
        });

        // Form submission (placeholder)
        const contactForm = document.getElementById('contact-form');
        contactForm.addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Merci pour votre demande ! Notre équipe vous contactera sous 24h.');
            contactForm.reset();
        });

